generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  balance  Float
  debt     Float
  fio      String
  passport Int
  phone    String?

  OperationFrom OperationFrom[]
  OperationTo   OperationTo[]
}

model OperationFrom {
  id     Int  @id @default(autoincrement())
  from   User @relation(fields: [userId], references: [id])
  userId Int
  OperationTo OperationTo[]
}

model OperationTo {
  id              Int           @id @default(autoincrement())
  to              User          @relation(fields: [userId], references: [id])
  userId          Int
  from            OperationFrom @relation(fields: [operationFromId], references: [id])
  operationFromId Int
}
